{
  "name": "mrk/nulledjava",
  "description": "A project to log user login data into MongoDB",
  "require": {
    "php": "~8.3",  // Optional: Specify required PHP version range
    "mongodb/mongodb": "^5.7",  // Use the latest stable version
    "vlucas/phpdotenv": "^5.6"   // Compatible version with MongoDB
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "scripts": {
    "post-install": "bin/phpdotenv load"  // Load environment variables after install
  },
  "config": {
    "optimize-autoloader": true
  }
}
